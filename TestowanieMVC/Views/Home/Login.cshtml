
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <link href="~/Content/Styles.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap-theme.css" rel="stylesheet" />


    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
 
    <script src="~/Scripts/jquery-3.4.1.js" type="text/javascript"></script>
    <script src="~/Scripts/knockout-3.5.1.js" type="text/javascript"></script>

    <title>Login</title>

    <style>
        body {
            background-color: #aeb1b6;
        }

        .div-center {
            width: 400px;
            height: 200px;
            background-color: #fff;
            position: absolute;
            left: 0;
            right: 0;
            top: 0;
            bottom: 0;
            margin: auto;
            max-width: 100%;
            max-height: 100%;
            overflow: auto;
            padding: 1em 2em;
            border-bottom: 2px solid #ccc;
            display: table;
        }

        .float-right {
            float: right;
        }

        .float-left {
            float-left;
        }
    </style>
</head>
<body>
    <div class="div-center">
        <h3 id="log_name"></h3>
        <form>
            <h1 data-bind="text: fullName"></h1>
            <div class="form-group">
                <label for="name-box">Imię</label>
                <input type="text" id="name-box" class="form-control" name="imie" placeholder="Imie..." data-bind="textInput: msgImie" />
            </div>
            <div class="form-group">
                <label for="name-box">Nazwisko</label>
                <input type="text" id="surnameBox-box" class="form-control" name="Nazwisko" placeholder="Nazwisko..." data-bind="textInput: msgNazwisko" />
            </div>

            <div class="form-group">
                <label for="age-box">Wiek</label>
                <input id="age-box" class="form-control" style="width:50px;" data-bind="textInput" />
            </div>
            <button type="button" class="btn btn-primary float-right">
                <span class="fa fa-save" data-bind="click">
                    Zapisz
                </span>
            </button>

        </form>
    </div>
    <script>
        var viewModel = {
            msgImie: ko.observable("Darek"),
            msgNazwisko: ko.observable("Lewandowski")
        };
        

        viewModel.fullName = ko.dependentObservable(function () {
            return "Witaj, " + this.msgImie() + " " + this.msgNazwisko();
        }, viewModel);

        ko.applyBindings(viewModel);

    </script>
</body>
</html>
