
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />   
    <title>Balls</title>
    <style>
        div{
	        float:left;
	        height:500px;
	        text-align:left;
	        border: solid #000 3px;
        }

        #header{
 	        width:100%;
 	        border: 0px;
 	        height:50px;
        }

        #main{
	        background-color: grey;
	        height: 800px;
        }
        img {
           width: 500px;
           height: 500px;
        }
        p {
            font-size: 50px;

        }
    </style>
</head>
<body>
    <div id="Pilki">
        <div class="guess_box">
            <img  src="~/Images/FIBA.jpg" />
        </div>
        <div class="guess_box">
            <img src="~/Images/FIFA.jpg"/>
        </div>
        <div class="guess_box">
            <img src="~/Images/NBA.jpg" />

        </div>
    </div>
    <script src="~/Scripts/jquery-1.9.1.js"></script>
    <script>
        $(document).ready(function () {
            $(".guess_box").bind('click', ramka);

            function ramka() {
                //$("p").remove();
                var znizka = Math.floor(Math.random() * 5) + 5;
                var znizkaMsg = "<p> Otrzymano rabat " + znizka + " %</p>";
                $(this).append(znizkaMsg);
                //$(".guess_box").unbind('click');

                $(".guess_box").each(function () {
                   $(this).unbind('click');
                });
            };

            
        });
        function MojaPierwsza() {
            $("div").hide();
        }
    </script>
</body>
</html>
